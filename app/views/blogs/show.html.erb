<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @blog.topic.title unless @blog.topic.nil? %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown @blog.body %>
</p>

<%= link_to 'Edit', edit_blog_path(@blog) %>
<%= link_to 'Delete', @blog, method: :delete, data: { confirm: 'Are you sure?'} %>
<%= link_to 'Back', blogs_path %>
