<div class="body-shape">
  <div class="form-signin text-center">
    <h1>Sign Up</h1>
    <%= form_for @user do |form| %>

      <div class="form-group" id="inputEmail">
        <%= form.label :email, class: 'sr-only' %>
        <%= form.text_field :email, class: 'form-control', placeholder: :email %>
      </div>

      <div class="form-group" id="inputEmail">
        <%= form.label :password, class: 'sr-only' %>
        <%= form.password_field :password, class: 'form-control', placeholder: :password %>
      </div>
    
      <div class="form-group" id="inputPassword">
        <%= form.label :password_confirmation, class: 'sr-only' %>
        <%= form.password_field :password_confirmation,class: 'form-control', placeholder: :password_confirmation %>
        <small id="passwordHelpInline" class="text-muted">
          Password must be minimun 6 characters long.
        </small>
      </div>

      <div class="form-grop">
        <%= form.submit "Sign Up", class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>
</div>

