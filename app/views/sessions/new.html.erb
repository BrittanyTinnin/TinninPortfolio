

<% flash.each do |name, msg| -%>
<div class="alert alert-dark alert-dismissible fade show" role="alert">
  <strong><%= content_tag :div, msg, class: name %></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end -%>


<div class="body-shape">
  <div class="form-signin text-center">
    <h1>Login</h1>
    <%= form_tag login_path do %>

      <div class="form-group" id="inputEmail">
        <%= text_field_tag :email, "", class: 'form-control', placeholder: :Email %>
      </div>

      <div class="form-group" id="inputPassword">
        <%= password_field_tag :password, "", class: 'form-control', placeholder: :Password %>
      </div>
    
      <div class="form-group">
        <%= submit_tag "Login", class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>