<h1>Portfolio Items</h1>

<%= link_to "New Item", new_portfolio_path %>

<% @portfolios.each do |portfolio| %>
    <p><%= link_to portfolio.title, portfolio_path(portfolio.id) %></p>
    <p><%= portfolio.subtitle %></p>
    <p><%= portfolio.body %></p>
    <p><%= image_tag(portfolio.thumb_image) %></p>
<% end %>