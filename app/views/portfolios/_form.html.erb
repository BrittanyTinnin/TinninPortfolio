  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle,class: 'form-control' %>
  </div>

  <div class="custom-file">
    <p><%= image_tag(portfolio.thumb_image_url) if portfolio.thumb_image? %></p>
    <%= form.label :thumb_image, class: 'custom-file-label' %>
    <p><%= form.file_field :thumb_image, class: 'custom-file-input' %></p>
    <p><%= form.hidden_field :thumb_image_cache %></p>
  </div>

  
  <div class="custom-file">
    <p><%= image_tag(portfolio.main_image_url) if portfolio.main_image? %></p>
    <%= form.label :main_image, class: 'custom-file-label' %>
    <p><%= form.file_field :main_image, class: 'custom-file-input' %></p>
    <p><%= form.hidden_field :main_image_cache %></p>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 10 %>
  </div>

  <div class="form-group">
    <%= form.label :source_code %>
    <%= form.text_field :source_code, class: 'form-control' %>
  </div>

  <div class="form-grop">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>